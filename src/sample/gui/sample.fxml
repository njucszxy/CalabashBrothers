<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.canvas.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.gui.Controller">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <TextArea fx:id="textArea" prefHeight="100.0" prefWidth="600.0" GridPane.rowIndex="1" />
      <Button fx:id="buttonNew" mnemonicParsing="false" onMouseClicked="#NewGame" text="New" GridPane.columnIndex="1" />
      <Button fx:id="buttonLoad" mnemonicParsing="false" onMouseClicked="#LoadGame" text="Load" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Pane fx:id="pane" prefHeight="600.0" prefWidth="600.0">
         <children>
            <Canvas fx:id="layer1" height="600.0" width="600.0" />
            <Canvas fx:id="layer2" height="600.0" width="600.0" />
         </children>
      </Pane>
   </children>
</GridPane>
